{
	"name": "renraku",
	"version": "0.5.0-7",
	"description": "expose async functions as an api",
	"license": "MIT",
	"author": "Chase Moskal <chasemoskal@gmail.com>",
	"type": "module",
	"main": "./x/index.js",
	"exports": {
		".": "./x/index.js",
		"./node": "./x/node.js",
		"./*": "./*"
	},
	"files": [
		"x",
		"s"
	],
	"scripts": {
		"build": "run-s _clean && run-p _importmap _tsc",
		"_clean": "rimraf x *.pem && mkdirp x",
		"_importmap": "importly --dev < package-lock.json > x/importmap.json",
		"_tsc": "tsc",
		"watch": "run-p _tsc_watch _test_watch",
		"_tsc_watch": "tsc -w",
		"start": "run-p watch _http",
		"_http": "http-server -p 8080",
		"_api": "node x/transports/http/examples/server.js",
		"_api_debug": "node inspect x/transports/http/examples/server.js",
		"_ws": "node x/transports/websocket/examples/server.js",
		"_ws_debug": "node inspect x/transports/websocket/examples/server.js",
		"test": "node x/tests.test.js",
		"_test_watch": "node --watch x/tests.test.js --verbose",
		"_test_inspect": "node inspect x/tests.test.js"
	},
	"keywords": [
		"rpc",
		"json",
		"jsonrpc",
		"json-rpc",
		"api",
		"web-api",
		"node-api"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chase-moskal/renraku.git"
	},
	"bugs": {
		"url": "https://github.com/chase-moskal/renraku/issues"
	},
	"homepage": "https://github.com/chase-moskal/renraku#readme",
	"devDependencies": {
		"@types/node": "^22.15.2",
		"@types/ws": "^8.18.1",
		"http-server": "^14.1.1",
		"importly": "^0.2.3",
		"mkdirp": "^3.0.1",
		"npm-run-all": "^4.1.5",
		"rimraf": "^6.0.1",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@e280/science": "^0.0.0-3",
		"@e280/stz": "^0.0.0-5",
		"ws": "^8.18.1"
	}
}
