{
	"name": "renraku",
	"version": "0.0.0-dev.22",
	"description": "expose async functions as an api",
	"license": "ISC",
	"author": "Chase Moskal <chasemoskal@gmail.com",
	"type": "module",
	"files": [
		"dist",
		"source"
	],
	"scripts": {
		"prepare": "run-s clean && run-p compile && run-s test",
		"clean": "rimraf dist *.pem && mkdirp dist",
		"compile": "tsc",
		"start-api": "node -e 'import(\"./dist/internals/examples/example-server.js\").then(mod => mod.exampleServer())'",
		"start-http": "serve -l 8000",
		"start": "run-p start-api start-http",
		"generate-keys": "./node_modules/redcrypto/generate-keys",
		"test": "exit 0"
	},
	"keywords": [
		"rpc",
		"json",
		"api",
		"web-api",
		"node-api"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chase-moskal/renraku.git"
	},
	"bugs": {
		"url": "https://github.com/chase-moskal/renraku/issues"
	},
	"homepage": "https://github.com/chase-moskal/renraku#readme",
	"devDependencies": {
		"@types/isomorphic-fetch": "0.0.35",
		"@types/node": "^13.7.7",
		"mkdirp": "^1.0.3",
		"npm-run-all": "^4.1.5",
		"replace": "^1.1.5",
		"rimraf": "^3.0.2",
		"serve": "^11.3.0",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"@koa/cors": "^3.0.0",
		"@types/koa": "^2.11.2",
		"@types/koa-bodyparser": "^4.3.0",
